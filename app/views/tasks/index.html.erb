<div class="container">
<h1>Tasks</h1>
<ul class="list-group list-group-flush">
<% @tasks.each do |task|%>
<li class="list-group-item list-group-item-action">
   <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe,
  task_path(task.id),
  method: :delete,
  data: {confirm: "Are you sure you want to delete this task?"}, class: 'text-dark' %>
  <%= link_to task.title, task_path(task), class: 'text-decoration-none text-dark mx-3' %>
  <% if task.completed %>
  <i class="fas fa-check text-success"></i>
  <% end %>
  </li>
<% end %>
</ul>
<%= link_to "Create task", new_task_path, class: 'btn btn-info m-3' %></p>
</div>
